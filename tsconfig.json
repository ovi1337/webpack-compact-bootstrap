{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2017"],
        "baseUrl": "src",
        "outDir": "dist/"
    },
    "include": ["src/**/*"]
}
